<component>
    <consts>
        <color name="green" value="0x00ff00"/>
        <color name="day_bg" value="0xf7f7f7"/>
        <color name="day_fg" value="0x222222"/>
        <color name="night_bg" value="0x131d1d"/>
        <color name="night_fg" value="0xffffff"/>
        <const name="tabview_tab_margin_left" value="10"/>
        <const name="tabview_tab_margin_right" value="10"/>
    </consts>
    <styles>
        <style name="style_day"
        bg_color="#day_bg"
        text_color="#day_fg"
        
        />
        <style name="style_night"
        bg_color="#night_bg"
        text_color="#night_fg"
        />
        <style name="header_day"
        bg_color="#day_bg"
        text_color="#day_fg"
        border_color="#green"/>
        <style name="header_night"
        bg_color="#night_bg"
        text_color="#night_fg"
        border_color="#2d3738"/>
        <style name="panel_day"
        bg_color="#day_bg"
        text_color="#day_fg"
        border_color="0xd0d0d0"/>
        <style name="panel_night"
        bg_color="#night_bg"
        text_color="#night_fg"
        border_color="#2a3435"/>
        <style name="tabview_tabbar_day" bg_color="0xf7f7f7" text_color="#day_fg"/>
        <style name="tabview_tabbar_night" bg_color="0x131d1d" text_color="#night_fg"/>
        <style name="tabview_tab_day" bg_color="0xffffff"/>
        <style name="tabview_tab_night" bg_color="0x010c0a"/>
        <style name="btn_day" bg_color="0xecedee" text_color="0x000000"/>
        <style name="btn_night" bg_color="0x2a3435"/>
    </styles>
    <view extends="lv_obj" name="main" width="100%" height="100%" 
        flex_flow="column" style_pad_all="0" style_pad_row="0">
        <style name="style_night" />
        <!-- header -->
        <lv_obj width="100%" height="40"
            style_pad_all="0" style_margin_all="0"
            style_border_width="2" style_border_side="bottom" style_radius="0"
            flex_flow="row"
            >
            <style name="header_day" />
            <lv_label text="Configuration" style_text_color="0x00aa00" style_pad_left="10" style_pad_top="10" style_text_font="montserrat_16_bold" />
            <lv_label text="2026-1-9 14:01" flex_grow="1" style_text_align="right" style_pad_right="10" style_pad_top="10"/>
        </lv_obj>
        <!-- body -->
        <lv_obj width="100%" flex_grow="1" style_outline_width="0"
            style_pad_all="0" flex_flow="row_reverse" style_border_width="0" style_pad_column="0">
            <!-- right_panel -->
            <lv_obj name="right_panel" flex_grow="1" flex_flow="column" style_border_width="0"
                width="100%" height="100%" style_pad_all="0" style_pad_row="0">
                <!-- 面包屑导航栏和返回按钮 -->
                <lv_obj flex_flow="row" width="100%" height="50" style_pad_all="0" style_border_width="2" style_border_side="bottom" style_radius="0">
                    <style name="panel_day" />
                    <breadcrumb  flex_grow="1" current_index="0" style_pad_top="10"  style_pad_left="10" top_pad="0" path=""/>
                    <lv_button height="40" style_margin_top="2" style_margin_right="10" style_radius="5">
                        <style name="btn_day" />
                        <lv_label text="&lt;  Return" />
                    </lv_button>
                </lv_obj>
                <lv_tabview width="100%" flex_grow="1" tab_bar_position="top" height="100%">
                    <lv_tabview-tab_bar style_pad_right="300">
                        <!-- <lv_tabview-tab_button style_border_width="0" /> -->
                        <style name="tabview_tabbar_day" />
                    </lv_tabview-tab_bar>
                    <lv_tabview-tab text="Network1" name="Network1" flex_flow="column" style_pad_all="0">
                        <lv_obj width="100%" height="100%" flex_flow="column" style_pad_all="10" style_border_width="0" style_radius="0">
                            <style name="tabview_tab_day" />
                            <lv_obj width="100%" height="60" flex_flow="row" style_pad_all="0" style_flex_cross_place="center">
                                <lv_label text="Allow Ethernet Download &amp; Upload" height="content" style_bg_color="0xff0000" style_margin_left="#tabview_tab_margin_left"/>
                                <lv_obj flex_grow="1" style_bg_opa="0" style_border_width="0" height="100%"/>
                                <lv_switch style_bg_color="0x00ff00" width="60" height="30" style_margin_right="#tabview_tab_margin_right"/>
                            </lv_obj>
                            <!-- Static ip -->
                            <lv_obj width="100%" flex_grow="5" flex_flow="column" style_border_width="2" style_pad_all="0">
                                <lv_obj width="100%" height="40" flex_flow="row" style_pad_all="0" style_border_side="bottom" style_border_width="2" style_radius="0" style_flex_cross_place="center">
                                    <style name="panel_day" />
                                    <lv_label text="Static IP" style_margin_left="#tabview_tab_margin_left" height="content" style_pad_all="0" style_text_font="montserrat_16_bold"/>
                                    <lv_obj flex_grow="1" style_pad_all="0" style_bg_opa="0" style_border_width="0" height="100%"/>
                            </lv_obj>
                                <lv_obj width="100%" flex_grow="1" flex_flow="row" style_pad_all="0" style_border_width="0" style_flex_cross_place="center">
                                    <lv_label text="IP Address" height="content" style_margin_left="#tabview_tab_margin_left"/>
                                    <lv_obj flex_grow="1" style_bg_opa="0" style_border_width="0" height="100%"/>
                                    <ip_input width="300" height="100%" style_margin_right="#tabview_tab_margin_right"/>
                                </lv_obj>
                                <lv_obj width="100%" flex_grow="1" flex_flow="row" style_pad_all="0" style_border_width="0" style_flex_cross_place="center">
                                    <lv_label text="Subnet Mask" height="content" style_margin_left="#tabview_tab_margin_left"/>
                                    <lv_obj flex_grow="1" style_bg_opa="0" style_border_width="0" height="100%"/>
                                    <ip_input width="300" height="100%" style_margin_right="#tabview_tab_margin_right"/>
                                </lv_obj>
                                <lv_obj width="100%" flex_grow="1" flex_flow="row" style_pad_all="0"   style_border_width="0" style_flex_cross_place="center">
                                    <lv_label text="Default Gateway" height="content" style_margin_left="#tabview_tab_margin_left"/>
                                    <lv_obj flex_grow="1" style_bg_opa="0" style_border_width="0" height="100%"/>
                                    <ip_input width="300" height="100%" style_margin_right="#tabview_tab_margin_right" />
                                </lv_obj>
                                <lv_obj width="100%" flex_grow="1" flex_flow="row" style_pad_all="0"  style_border_width="0" style_flex_cross_place="center">
                                    <lv_obj flex_grow="1" style_bg_opa="0" style_border_width="0" height="100%"/>
                                    <lv_button  height="30" style_radius="0" style_width="100" style_margin_right="#tabview_tab_margin_right" style_pad_all="0">
                                        <style name="btn_day" />
                                        <lv_label text="SAVE" style_text_color="0x007c22" style_align="center"/>
                                    </lv_button>
                                </lv_obj>
                            </lv_obj>
                            <!-- dhcp -->
                            <lv_obj width="100%" flex_grow="3" flex_flow="column" style_border_width="2" style_pad_all="0">
                                <lv_obj width="100%" height="40" flex_flow="row" style_pad_all="0" style_border_side="bottom" style_border_width="2" style_radius="0" style_flex_cross_place="center">
                                    <style name="panel_day" />
                                    <lv_label text="DHCP" style_margin_left="#tabview_tab_margin_left" height="content" style_pad_all="0" style_text_font="montserrat_16_bold" />
                                    <lv_obj flex_grow="1" style_bg_opa="0" style_border_width="0" height="100%"/>
                                    <lv_switch style_bg_color="0x00ff00" height="30" style_margin_right="#tabview_tab_margin_right"/>
                                </lv_obj>
                                <lv_obj width="100%" flex_grow="1" flex_flow="row" style_pad_all="0"   style_border_width="0" style_flex_cross_place="center">
                                    <lv_label text="Host Name" height="content" style_margin_left="#tabview_tab_margin_left"/>
                                    <lv_obj flex_grow="1" style_bg_opa="0" style_border_width="0" height="100%"/>
                                    <ip_input width="300" height="100%" style_margin_right="#tabview_tab_margin_right"/>
                                </lv_obj>
                                <lv_obj width="100%" flex_grow="1" flex_flow="row" style_pad_all="0"  style_border_width="0" style_flex_cross_place="center">
                                    <lv_obj flex_grow="1" style_bg_opa="0" style_border_width="0" height="100%"/>
                                    <lv_button  height="30" style_radius="0" style_width="100" style_margin_right="#tabview_tab_margin_right" style_pad_all="0">
                                        <style name="btn_day" />
                                        <lv_label text="SAVE" style_text_color="0x007c22" style_align="center"/>
                                    </lv_button>
                                </lv_obj>
                            </lv_obj>
                            <!-- dns -->
                            <lv_obj width="100%" flex_grow="4" flex_flow="column" style_border_width="2" style_pad_all="0">
                                <lv_obj width="100%" height="40" flex_flow="row" style_pad_all="0" style_border_side="bottom" style_border_width="2" style_radius="0" style_flex_cross_place="center">
                                    <style name="panel_day" />
                                    <lv_label text="DNS" style_margin_left="#tabview_tab_margin_left" height="content" style_pad_all="0" style_text_font="montserrat_16_bold"/>
                                    <lv_obj flex_grow="1" style_bg_opa="0" style_border_width="0" height="100%"/>
                                    <lv_switch style_bg_color="0x00ff00" height="30" style_margin_right="#tabview_tab_margin_right"/>
                                </lv_obj>
                                <lv_obj width="100%" flex_grow="1" flex_flow="row" style_pad_all="0"   style_border_width="0" style_margin_left="#tabview_tab_margin_left" style_margin_right="#tabview_tab_margin_right" style_flex_cross_place="center">
                                    <style name="panel_day" />
                                    <lv_label text="MAC:    Ethernet1    00:01:23:44:34:00" style_pad_left="10" />
                                    <lv_obj flex_grow="1" style_bg_opa="0" style_border_width="0" height="100%"/>
                            </lv_obj>
                                <lv_obj width="100%" flex_grow="1" flex_flow="row" style_pad_all="0"   style_border_width="0">
                                    <lv_label text="IP Address (DNS)" height="content" style_margin_left="#tabview_tab_margin_left"/>
                                    <lv_obj flex_grow="1" style_bg_opa="0" style_border_width="0" height="100%"/>
                                    <ip_input width="300" height="100%" style_margin_right="#tabview_tab_margin_right"/>
                                </lv_obj>
                                <lv_obj width="100%" flex_grow="1" flex_flow="row" style_pad_all="0"  style_border_width="0">
                                    <lv_obj flex_grow="1" style_bg_opa="0" style_border_width="0" height="100%"/>
                                    <lv_button  height="30" style_radius="0" style_width="100" style_margin_right="#tabview_tab_margin_right" style_pad_all="0">
                                        <style name="btn_day" />
                                        <lv_label text="SAVE" style_text_color="0x007c22" style_align="center"/>
                                    </lv_button>
                                </lv_obj>
                            </lv_obj>
                        </lv_obj>
                    </lv_tabview-tab>
                    <lv_tabview-tab text="Network2" name="Network2" style_pad_all="0">
                        <!-- Network2内容 -->
                        <lv_obj width="100%" height="100%" flex_flow="column" style_pad_all="0" style_border_width="0" style_radius="0">
                            <style name="tabview_tab_day" />
                            <lv_label text="This is Network2 tab content." style_pad_all="10" />
                        </lv_obj>
                    </lv_tabview-tab>
                    <lv_tabview-tab text="Network3" name="Network3">
                        <!-- Network3内容 -->
                        <lv_label text="hello3" style_pad_all="10" />
                    </lv_tabview-tab>
                </lv_tabview>
            </lv_obj>
            <!-- left_panel -->
            <lv_obj flex_flow="column"  style_flex_cross_place="center" style_pad_hor="10" style_radius="0" style_pad_top="10" width="200" style_max_width="200" style_margin_all="0" style_border_width="2" style_outline_width="0" height="100%" style_border_side="right">
                <style name="panel_day" />
                <tabButton image_name="flower" style_name="day" btn_text="Offline" width="170" style_margin_all="0" style_border_width="0" style_outline_width="0"/>
                <tabButton image_name="flower" style_name="day" btn_text="System" width="170" style_margin_all="0" style_border_width="0" style_outline_width="0" />
                <tabButton image_name="flower" style_name="day" btn_text="Diagnostics" width="170" style_margin_all="0" style_border_width="0" style_outline_width="0" />
                <lv_obj flex_grow="1" style_bg_opa="0" style_margin_all="0" style_border_width="0" style_outline_width="0"/>
                <lv_obj flex_flow="row" width="170" style_pad_all="0" style_margin_all="0" style_border_width="0" style_bg_opa="0" height="40">
                    <lv_obj flex_grow="1" style_bg_opa="0" style_pad_all="0" style_margin_all="0" style_border_width="0" height="40"/>
                    <lv_switch />
                    <lv_obj flex_grow="1" style_bg_opa="0" style_pad_all="0" style_margin_all="0" style_border_width="0" height="40"/>
                </lv_obj>
            </lv_obj>
        </lv_obj>
    </view>
</component>
