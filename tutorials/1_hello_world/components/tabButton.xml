<!-- my_button.xml -->
<component>
	<api>
		<prop name="image_name" type="string" />
		<prop name="btn_text" type="string" />
		<prop name="style_name" type="string" default="night"></prop>
	</api>

	<consts>
		<int name="thin" value="2" />
	</consts>

	<styles>
		<style name="pressed_style" border_width="#thin" border_color="0xff0000" />
		<style name="day" bg_color="0xecedee" text_color="0x000000"/>
		<style name="night" bg_color="0x2a3435"/>
		<style name="focus" text_color="0x00ff00"/>
	</styles>

	<view extends="lv_button" flex_flow="row" style_radius="5" style_flex_cross_place="center" style_margin_all="0" style_border_width="0" style_outline_width="0" style_pad_all="5">
		<style name="focus" selector="focused" />
		<style name="$style_name"/>	

		<lv_image src="flower" width="48" height="48" style_margin_right="5"/>
		
		<lv_label text="$btn_text" />
	</view>
</component>
